        android:ems="10"
        android:id="@+id/username_edit_text_login"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/password_edit_text_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffe6e6e6" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Enter Your Password"
        android:id="@+id/password_edit_text_login"
        android:layout_marginBottom="106dp"
        android:layout_above="@+id/action_button_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffe6e6e6" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Login"
        android:id="@+id/action_button_login"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/editText_action_signup"
        android:layout_alignLeft="@+id/editText_action_signup"
        android:layout_alignStart="@+id/editText_action_signup" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Sign up"
        android:id="@+id/editText_action_signup"
        android:layout_marginBottom="36dp"
