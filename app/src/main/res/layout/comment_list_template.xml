<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:layout_margin="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        style="@style/Base.Widget.AppCompat.ActionBar.Solid"
        android:background="@color/common_signin_btn_light_text_disabled">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/username_list_textView"
            android:layout_weight="10"
            android:scaleType="fitCenter"
            android:text="UserName"
            android:textAlignment="center"
            android:textSize="7pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/date_list_textView"
            android:layout_weight="10"
            android:scaleType="fitCenter"
            android:text="Date"
            android:textAlignment="center"
            android:textSize="7pt" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        style="@style/Base.Widget.AppCompat.ActionBar.Solid"
        android:background="@color/common_signin_btn_light_text_disabled">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/arabic_ayahNumber_list_textView"
            android:layout_weight="10"
            android:scaleType="fitCenter"
            android:text="ayah number"
            android:textAlignment="center"
            android:textSize="7pt" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ayahNumber_list_textView"
            android:layout_weight="10"
            android:scaleType="fitCenter"
            android:text="ayah number"
            android:textAlignment="center"
            android:textSize="7pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/Sourah_ID_list_textView"
            android:layout_weight="10"
            android:scaleType="fitCenter"
            android:text="Sourah ID"
            android:textAlignment="center"
            android:textSize="7pt"
            android:visibility="invisible"/>

    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/comment_list_textView"
        android:layout_weight="10"
        android:scaleType="fitCenter"
        android:text="Comment"
        android:textAlignment="center"
        android:textSize="10pt" />


</LinearLayout>